<% if(typeof errors != 'undefined') { %>
    <div style="padding:0.1rem;background-color: rgb(0,0,0,0.05); border: rgb(0,0,0,.06) solid 1px"><div class='headings-small' style="margin-left:0.2rem;font-size:1.4rem;text-decoration: none;">Bitte überprüfen Sie folgende Angaben:</div>
    <% errors.forEach(function(error) { %>
        <div >
                <p style="color:darkred; margin-left:0.3rem;text-decoration: underline;"><%= error.msg %></p>
        </div>
    <% }); %>
</div>
<% } %>
